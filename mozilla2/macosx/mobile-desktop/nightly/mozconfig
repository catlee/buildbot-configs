# Options for client.mk.
mk_add_options MOZ_BUILD_PROJECTS="xulrunner mobile"
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/objdir
mk_add_options AUTOCONF=autoconf213

# Global options
ac_add_options --enable-macos-target=10.4
ac_add_options --with-macos-sdk=/Developer/SDKs/MacOSX10.4u.sdk
ac_cv_visibility_pragma=no

# Debug Build Setup Options
ac_add_options --enable-optimize
ac_add_options --disable-debug

export CFLAGS="-mmacosx-version-min=10.4"
export CXXFLAGS="-mmacosx-version-min=10.4"

# XULRunner options
ac_add_app_options xulrunner --enable-application=xulrunner
ac_add_app_options xulrunner --disable-installer

# mobile options
ac_add_app_options mobile --enable-application=mobile
ac_add_app_options mobile --with-libxul-sdk=../xulrunner/dist

# can't build 64bit Shark, https://developer.mozilla.org/en/Profiling_JavaScript_with_Shark
ac_add_options --target=i686-apple-darwin10.2.0
ac_add_options --enable-application=browser
ac_add_options --disable-tests

export CFLAGS="-gdwarf-2"
export CXXFLAGS="-gdwarf-2"

# For NSS symbols
export MOZ_DEBUG_SYMBOLS=1
ac_add_options --enable-debug-symbols="-gdwarf-2"

# Needed to enable breakpad in application.ini
export MOZILLA_OFFICIAL=1

# Enable parallel compiling
mk_add_options MOZ_MAKE_FLAGS="-j4"

# shark specific options
ac_add_options --enable-shark
ac_add_options --enable-dtrace
ac_add_options --enable-debugger-info-modules
ac_add_options --disable-install-strip
export MOZ_PKG_SPECIAL="shark"

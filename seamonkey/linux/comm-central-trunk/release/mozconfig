ac_add_options --enable-application=suite
ac_add_options --enable-optimize
ac_add_options --enable-update-channel=beta
ac_add_options --enable-update-packaging
ac_add_options --disable-debug
# static build with tests is not supported (e.g. in crashreporter)
ac_add_options --disable-tests
#ac_add_options --with-branding=suite/branding/unofficial

ac_add_options --enable-static
ac_add_options --disable-shared

CC=/tools/gcc-4.3.3/installed/bin/gcc
CXX=/tools/gcc-4.3.3/installed/bin/g++

# XXX disable pedantic until we get MOZ_IPC or we resolve the build issues
ac_add_options --disable-pedantic

export CFLAGS="-gstabs+"
export CXXFLAGS="-gstabs+"

# For NSS symbols
export MOZ_DEBUG_SYMBOLS=1
ac_add_options --enable-debug-symbols="-gstabs+"

# Needed to enable breakpad in application.ini
export MOZILLA_OFFICIAL=1

#Use ccache
ac_add_options --with-ccache=/usr/bin/ccache
